{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "app/**/*.ts",
    "utils/**/*.ts", 
    "services/**/*.ts",
    "scripts/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "contracts/**/*",
    "node_modules",
    "build/**/*"
  ]
} 